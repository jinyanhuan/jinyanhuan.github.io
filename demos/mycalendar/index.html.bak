  function getDaysNumber(year,mouth){
    var days=[31,28,31,30,31,30,31,31,30,31,30,31];
	if(mouth==1){
	  return ((year%4==0 && year%100!==0) || year%400==0)? 29 : 28
	}
	else{
      return days[mouth]
	}
  }
  
